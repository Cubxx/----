{
  "type": "module",
  "scripts": {
    "dev": "bun scripts/server.js",
    "format": "prettier --write 'src/**/*' 'types/**/*' 'scripts/**/*'",
    "type-check": "tsc --noEmit",
    "meta": "node scripts/meta.js",
    "lib": "node scripts/lib.js"
  },
  "devDependencies": {
    "@types/bun": "^1.1.17",
    "@types/node": "^22.10.2",
    "@types/wicg-file-system-access": "^2023.10.5",
    "csstype": "^3.1.3",
    "lit-html": "^3.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "sober": "^0.4.2",
    "typed-query-selector": "^2.12.0",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "jsdocTagsOrder": "{\"template\": 24.5}",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
